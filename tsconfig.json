{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": ["**/*.ts", "**/*.tsx"]
}
